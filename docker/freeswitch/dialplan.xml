<include>
  <!-- Park calls to "park" destination -->
  <extension name="switest2-park">
    <condition field="destination_number" expression="^park$">
      <action application="set" data="hangup_after_bridge=true"/>
      <action application="park"/>
    </condition>
  </extension>

  <!-- Answer and echo for "echo" destination -->
  <extension name="switest2-echo">
    <condition field="destination_number" expression="^echo$">
      <action application="answer"/>
      <action application="echo"/>
    </condition>
  </extension>

  <!-- Send DTMF digits for testing -->
  <extension name="switest2-dtmf">
    <condition field="destination_number" expression="^dtmf_(\d+)$">
      <action application="answer"/>
      <action application="sleep" data="500"/>
      <action application="send_dtmf" data="$1"/>
      <action application="sleep" data="3000"/>
    </condition>
  </extension>

  <!-- Default: park anything else -->
  <extension name="switest2-default">
    <condition field="destination_number" expression="^(.*)$">
      <action application="set" data="hangup_after_bridge=true"/>
      <action application="park"/>
    </condition>
  </extension>
</include>
